<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Luminy_LiFi" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eggplant</item>
        <item name="colorPrimaryVariant">@color/deep_taupe</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_silver</item>
        <item name="colorSecondaryVariant">@color/mint_cream</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Background Si le mode darkmode est activé -->
    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Text Si le mode darkmode activé -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- IMAGE Si le mode darkmode est activé -->
    <style name="IMAGE">
        <item name="android:src">@drawable/etage_invert</item>
    </style>

</resources>